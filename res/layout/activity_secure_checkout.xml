<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow2"
    tools:context=".SecureCheckout">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="5dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="5dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="5dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="5dp" />

    <TextView
        android:id="@+id/SecureCheckout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Secure Checkout"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintEnd_toStartOf="@+id/guideline16"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/guideline15"
        app:layout_constraintTop_toTopOf="@+id/guideline17" />

    <EditText
        android:id="@+id/Edit_text_Phone"
        android:layout_width="330dp"
        android:layout_height="60dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/circle_shape_text_background"
        android:drawableLeft="@drawable/phone_secure_checkout"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Phone"
        android:textSize="20dp"
        android:inputType="phone"
        android:maxLines="1"
        android:textColor="@color/white"
        android:textColorHint="#DADADA"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        app:layout_constraintEnd_toEndOf="@+id/SecureCheckout"
        app:layout_constraintStart_toStartOf="@+id/SecureCheckout"
        app:layout_constraintTop_toBottomOf="@+id/SecureCheckout" />

    <EditText
        android:id="@+id/location_Edit_text"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:maxLines="4"
        android:background="@drawable/circle_shape_text_background"
        android:inputType="textPersonName"
        android:textColor="@color/white"
        android:textColorHint="#DADADA"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        android:hint="To Write address press icon"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/Edit_text_Phone"
        app:layout_constraintStart_toStartOf="@+id/Edit_text_Phone"
        app:layout_constraintTop_toBottomOf="@+id/Edit_text_Phone" />

    <ImageView
        android:id="@+id/location_Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/location_Edit_text"
        app:layout_constraintEnd_toStartOf="@+id/guideline16"
        app:srcCompat="@drawable/location_secure_checkout" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Instruction For Chose This Food"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        app:layout_constraintStart_toStartOf="@+id/location_Edit_text"
        app:layout_constraintTop_toBottomOf="@+id/location_Edit_text" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Any specific preferences? Let us know."
        android:textColor="#DADADA"
        android:textSize="15dp"
        android:textStyle="italic"
        android:shadowColor="@color/black"
        android:shadowRadius="2"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:inputType="textLongMessage"
        android:hint="Spicy and Light"
        android:textColor="@color/white"
        android:background="@drawable/circle_shape_text_background"
        android:textColorHint="#DADADA"
        android:textStyle="normal"
        android:textSize="22sp"
        android:shadowColor="@color/black"
        android:shadowRadius="3"
        app:layout_constraintEnd_toEndOf="@+id/location_Edit_text"
        app:layout_constraintStart_toStartOf="@+id/textView9"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Total"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        android:shadowColor="@color/black"
        android:shadowRadius="2"
        app:layout_constraintStart_toStartOf="@+id/editTextTextPersonName3"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:hint="Total Prices"
        android:shadowColor="@color/black"
        android:shadowRadius="2"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="20dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/editTextTextPersonName3"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName3" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/secure_checkout_material_button"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/yellow1"
        android:outlineAmbientShadowColor="@color/white"
        android:outlineSpotShadowColor="@color/white"
        android:shadowRadius="4"
        android:text="Order Now"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline18"
        app:layout_constraintEnd_toStartOf="@+id/guideline16"
        app:layout_constraintStart_toStartOf="@+id/guideline15" />

</androidx.constraintlayout.widget.ConstraintLayout>